<header class="jumbotron bg-warning">
  <img width="500px" src="/assets/img/Hamburger_patty.jpg" alt="Hamburger patty">
  <h1 class="display-3">Eat-Ye-Burger!</h1>
</header>

<main class="container">

  <div class="row">

    <div class="col-md-4 list-container">
      <div class="card">
        <ol class="burgers-ready">
          {{#each burgers}}
            {{#unless devoured}}
              {{> burgers/burger-li devoured=false}}
            {{/unless}}
          {{/each}}
        </ol>
      </div>
    </div>

    <div class="col-md-4">
      <form class="create-form">

        <div class="form-group">
          <textarea id="desc" class="burger-textarea" rows="4" cols="30"></textarea>
        </div>

        <button type="submit" id="submit-burger">Submit</button>
      </form>
    </div>

    <div class="col-md-4 list-container">
      <div class="card">
        <ul class="burgers-eaten">
          {{#each burgers}}
            {{#if devoured}}
              {{> burgers/burger-li devoured=true}}
            {{/if}}
          {{/each}}
        </ul>
      </div>
    </div>

  </div>
</main>
